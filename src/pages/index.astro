---
import BaseLayout from '@/layouts/Base.astro';
import { BlogGallery } from '@/layouts/BlogGallery';
import { Hero } from '@/layouts/Hero';
import { ProjectList } from '@/layouts/ProjectList';
import type { IFrontmatter } from '@/types/IFrontmatter';
import { AppConfig } from '@/utils/AppConfig';
import { sortByDate } from '@/utils/Posts';

const allPosts = await Astro.glob<IFrontmatter>('./posts/*.md');
const sortedPosts = sortByDate(allPosts);
const lastThreePosts = sortedPosts.slice(0, 3);

const { title } = AppConfig;
const { description } = AppConfig;
---

<BaseLayout head={{ title, description }}>
  <Hero />
  <ProjectList />
  <BlogGallery />

  <div>
    <div>
      {lastThreePosts.map((elt) => (
        <div>
          <a href={elt.url}>{elt.frontmatter.title}</a>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
