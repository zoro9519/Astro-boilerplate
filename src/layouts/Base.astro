---
export interface Props {
  head: {
    title: string;
    description: string;
  };
}

const {
  head: { title, description },
} = Astro.props as Props;
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
    <meta name='description' content={description} />

    <link rel='alternate' type='application/rss+xml' href='/rss.xml' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
  </head>
  <body class='bg-slate-900'>
    <div
      class='mx-auto flex max-w-screen-lg items-center justify-between px-3 py-5'
    >
      <div
        class='flex items-center bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-xl font-bold text-transparent'
      >
        <svg
          class='mr-1 h-10 w-10 stroke-cyan-600'
          xmlns='http://www.w3.org/2000/svg'
          viewBox='0 0 24 24'
          fill='none'
          stroke-width='1.5'
          stroke-linecap='round'
          stroke-linejoin='round'
        >
          <path d='M0 0h24v24H0z' stroke='none'></path>
          <rect x='3' y='12' width='6' height='8' rx='1'></rect>
          <rect x='9' y='8' width='6' height='12' rx='1'></rect>
          <rect x='15' y='4' width='6' height='16' rx='1'></rect>
          <path d='M4 20h14'></path>
        </svg>

        Ixartz's Blog
      </div>

      <nav>
        <ul class='flex gap-x-3 font-medium text-gray-100'>
          <li>About</li>
          <li>Blogs</li>
          <li>Newsletter</li>
        </ul>
      </nav>
    </div>

    <slot></slot>
  </body>
</html>
